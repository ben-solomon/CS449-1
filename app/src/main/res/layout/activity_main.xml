<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.cooper.baseballbuddy.MainActivity"
    android:background="@drawable/baseball_buddy_bg1"
    >


    <Button
        android:text="Follow a game"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followGameBtn"
        style="@style/Widget.AppCompat.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_above="@+id/newsBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="News"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsBtn"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        style="@style/Widget.AppCompat.Button"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/followGameBtn"
        android:layout_alignEnd="@+id/followGameBtn" />

    <Button
        android:text="Scores"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoresBtn"
        style="@style/Widget.AppCompat.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/newsBtn"
        android:layout_alignStart="@+id/newsBtn"
        android:layout_alignEnd="@+id/newsBtn" />

    <Button
        android:text="My Feed"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutBtn"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/scoresBtn"
        android:layout_alignStart="@+id/scoresBtn"
        android:layout_alignEnd="@+id/scoresBtn" />

    <Button
        android:text="My Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myAccountBtn"
        android:textColor="#000000"
        android:layout_below="@+id/aboutBtn"
        android:layout_alignStart="@+id/aboutBtn"
        android:layout_alignEnd="@+id/aboutBtn"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Welcome to BaseballBuddy"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTextView"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_below="@+id/signUpBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtn"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/followGameBtn" />

</RelativeLayout>
